
{{define "recent"}}
  {{range $index, $blob := .}}
    {{$index}}. <a onclick="toggleContent({{$blob.Ref}})">{{$blob.Ref}}</p><br>
    <p class="invisible" id="{{$blob.Ref}}">{{$blob.Content}}</p><br>
  {{end}}
{{end}}

<!DOCTYPE html>

<html>
  <head>
    <title>RWC Cas</title>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <link rel="shortcut icon" href="favicon.ico" />
    <link rel="stylesheet" type="text/css" href="grid.css" />
    <link rel="stylesheet" type="text/css" href="style.css" />
  </head>

  <body id="body">

    <div class="row">
      <h1>Recent Blobs</h1>
    </div>

    <div class="row">
      <div class="column grid_2">
        {{template "recent"}}
      </div>
    </div>

    <div class="row">
      <div class="column grid_10" id="blob-view">
      
      </div>
    </div>

    <script type="text/javascript" src="main.js"></script>
  </body>
</html>

